<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Spacing Values -->
    <x:Double x:Key="SpacingXSmall">4</x:Double>
    <x:Double x:Key="SpacingSmall">8</x:Double>
    <x:Double x:Key="SpacingMedium">12</x:Double>
    <x:Double x:Key="SpacingLarge">16</x:Double>
    <x:Double x:Key="SpacingXLarge">20</x:Double>
    <x:Double x:Key="SpacingXXLarge">24</x:Double>
    <x:Double x:Key="SpacingHuge">32</x:Double>
    <x:Double x:Key="SpacingMassive">40</x:Double>
    
    <!-- Thickness Values -->
    <Thickness x:Key="PagePadding">20</Thickness>
    <Thickness x:Key="CardPadding">12</Thickness>
    <Thickness x:Key="ButtonPadding">12,8</Thickness>
    <Thickness x:Key="InputMargin">0,5</Thickness>
    <Thickness x:Key="SectionMargin">0,0,0,20</Thickness>
    <Thickness x:Key="ElementMargin">0,0,0,16</Thickness>
    <Thickness x:Key="LabelMargin">0,0,0,8</Thickness>
    <Thickness x:Key="ListItemMargin">8</Thickness>
    <Thickness x:Key="CompactPadding">4</Thickness>
    
    <!-- Corner Radius -->
    <CornerRadius x:Key="SmallCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="DefaultCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">12</CornerRadius>
    
    <!-- Border Thickness -->
    <x:Double x:Key="BorderThicknessLight">1</x:Double>
    <x:Double x:Key="BorderThicknessMedium">2</x:Double>
    
    <!-- Container Widths -->
    <x:Double x:Key="FormMaxWidth">400</x:Double>
    <x:Double x:Key="NarrowFormWidth">300</x:Double>
</ResourceDictionary>