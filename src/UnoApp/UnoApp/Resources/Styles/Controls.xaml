<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
        <ResourceDictionary Source="Typography.xaml"/>
        <ResourceDictionary Source="Spacing.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Button Styles -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource OnPrimaryColor}"/>
        <Setter Property="Padding" Value="{StaticResource ButtonPadding}"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="CornerRadius" Value="{StaticResource SmallCornerRadius}"/>
    </Style>
    
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource BorderThicknessLight}"/>
        <Setter Property="Padding" Value="{StaticResource ButtonPadding}"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="CornerRadius" Value="{StaticResource SmallCornerRadius}"/>
    </Style>
    
    <!-- TextBox Styles -->
    <Style x:Key="DefaultTextBoxStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="{StaticResource InputMargin}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource BorderThicknessLight}"/>
    </Style>
    
    <!-- PasswordBox Styles -->
    <Style x:Key="DefaultPasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Margin" Value="{StaticResource InputMargin}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource BorderThicknessLight}"/>
    </Style>
    
    <!-- StackPanel Styles -->
    <Style x:Key="FormStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Padding" Value="{StaticResource PagePadding}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- Border Styles -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource BorderThicknessLight}"/>
        <Setter Property="CornerRadius" Value="{StaticResource DefaultCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
    </Style>
    
    <!-- ListView Styles -->
    <Style x:Key="StretchedListViewItemStyle" TargetType="ListViewItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <!-- NavigationView Styles -->
    <Style x:Key="MainNavigationViewStyle" TargetType="NavigationView">
        <Setter Property="PaneDisplayMode" Value="Left"/>
        <Setter Property="IsBackButtonVisible" Value="Collapsed"/>
        <Setter Property="IsSettingsVisible" Value="True"/>
    </Style>
    
    <!-- ProgressRing Styles -->
    <Style x:Key="CenteredProgressRingStyle" TargetType="ProgressRing">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,10"/>
    </Style>
    
    <!-- HyperlinkButton Styles -->
    <Style x:Key="InlineHyperlinkButtonStyle" TargetType="HyperlinkButton">
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="5,0,0,0"/>
    </Style>
    
    <!-- Tag Border Style -->
    <Style x:Key="TagBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource SmallCornerRadius}"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="Margin" Value="0,0,4,4"/>
    </Style>
    
    <!-- Compact Card Border Style -->
    <Style x:Key="CompactCardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource BorderThicknessLight}"/>
        <Setter Property="CornerRadius" Value="{StaticResource SmallCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingSmall}"/>
        <Setter Property="Margin" Value="{StaticResource ListItemMargin}"/>
    </Style>
    
    <!-- ItemsControl Panel Style -->
    <Style x:Key="HorizontalWrapItemsPanelStyle" TargetType="ItemsControl">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <WrapGrid Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Page Header Style -->
    <Style x:Key="PageHeaderBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Padding" Value="16,8"/>
    </Style>
    
    <!-- Settings Bar Style -->
    <Style x:Key="SettingsBarStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource InfoBrush}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
    </Style>
    
    <!-- Filter Bar Style -->
    <Style x:Key="FilterBarStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource NeutralLightBrush}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
    </Style>
    
    <!-- Action Button Styles -->
    <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <Style x:Key="CallButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Background" Value="Green"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <!-- Status Badge Style -->
    <Style x:Key="StatusBadgeStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource SmallCornerRadius}"/>
        <Setter Property="Padding" Value="8,2"/>
    </Style>
    
    <!-- Contact Card Style -->
    <Style x:Key="ContactCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource BorderThicknessLight}"/>
        <Setter Property="CornerRadius" Value="{StaticResource DefaultCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
        <Setter Property="Margin" Value="{StaticResource ListItemMargin}"/>
    </Style>
</ResourceDictionary>