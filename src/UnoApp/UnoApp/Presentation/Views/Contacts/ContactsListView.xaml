<base:BaseView
    x:Class="UnoApp.Presentation.Views.Contacts.ContactsListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:UnoApp.Presentation.Common.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UnoApp.Presentation.Views.Contacts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:constants="using:UnoApp.Constants"
    xmlns:mvux="using:Uno.Extensions.Reactive.UI"
    d:DataContext="{d:DesignInstance Type=local:ContactsListViewModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">

    <Grid>
        <mvux:FeedView Source="{Binding Item}">
            <mvux:FeedView.ValueTemplate>
                <DataTemplate>
                    <Grid>
                        <ListView ItemsSource="{Binding Data}"
                                  SelectionMode="None"
                                  IsItemClickEnabled="False"
                                  x:Name="ContactsList">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem" BasedOn="{StaticResource StretchedListViewItemStyle}" />
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:ContactsListModel">
                                    <Border Style="{StaticResource CardBorderStyle}"
                                                Margin="{StaticResource ListItemMargin}">
                                        <StackPanel Spacing="{StaticResource SpacingSmall}">
                                            <TextBlock Text="{Binding Name}"
                                                           Style="{StaticResource BodyTextStyle}"
                                                           FontWeight="{StaticResource FontWeightSemiBold}" />
                                            <StackPanel Orientation="Horizontal" Spacing="{StaticResource SpacingSmall}">
                                                <TextBlock Text="Email:" Style="{StaticResource LabelTextStyle}" />
                                                <TextBlock Text="{Binding Email}" Style="{StaticResource BodyTextStyle}" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="{StaticResource SpacingSmall}">
                                                <TextBlock Text="Phone:" Style="{StaticResource LabelTextStyle}" />
                                                <TextBlock Text="{Binding Phone}" Style="{StaticResource BodyTextStyle}" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="{StaticResource SpacingSmall}">
                                                <TextBlock Text="Branch:" Style="{StaticResource LabelTextStyle}" />
                                                <TextBlock Text="{Binding Branche}" Style="{StaticResource BodyTextStyle}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        
                    </Grid>
                </DataTemplate>
            </mvux:FeedView.ValueTemplate>
        </mvux:FeedView>
    </Grid>
</base:BaseView>
