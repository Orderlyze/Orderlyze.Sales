<base:BaseView
    x:Class="UnoApp.Presentation.Views.WixContacts.WixContactsListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:UnoApp.Presentation.Common.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UnoApp.Presentation.Views.WixContacts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvux="using:Uno.Extensions.Reactive.UI"
    d:DataContext="{d:DesignInstance Type=local:WixContactsListViewModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Date Picker Row -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Spacing="{StaticResource SpacingMedium}"
                    Padding="{StaticResource SpacingMedium}">
            <TextBlock Text="Datum auswählen:" 
                       VerticalAlignment="Center"
                       Style="{StaticResource BodyTextStyle}" />
            <DatePicker x:Name="ContactDatePicker"
                        DateChanged="DatePicker_DateChanged"
                        VerticalAlignment="Center" />
        </StackPanel>
        
        <mvux:FeedView Grid.Row="1" Source="{Binding Item}">
            <mvux:FeedView.ValueTemplate>
                <DataTemplate>
                    <ListView ItemsSource="{Binding Data}"
                              SelectionMode="None"
                              IsItemClickEnabled="True"
                              ItemClick="ListView_ItemClick">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem" BasedOn="{StaticResource StretchedListViewItemStyle}" />
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:WixContactsListModel">
                                <Border Style="{StaticResource CompactCardBorderStyle}">
                                    <StackPanel Spacing="{StaticResource SpacingXSmall}">
                                        <TextBlock Text="{Binding Name}"
                                                       Style="{StaticResource BodyTextStyle}"
                                                       FontWeight="{StaticResource FontWeightSemiBold}" />
                                        <TextBlock Text="{Binding Email}" Style="{StaticResource BodySmallTextStyle}" />
                                        <TextBlock Text="{Binding Branche}" Style="{StaticResource BodySmallTextStyle}" />
                                        <TextBlock Text="{Binding Company}" Style="{StaticResource BodySmallTextStyle}" />
                                        <ItemsControl ItemsSource="{Binding Labels}" Margin="0,4,0,0" Style="{StaticResource HorizontalWrapItemsPanelStyle}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Style="{StaticResource TagBorderStyle}">
                                                        <TextBlock Text="{Binding}" Style="{StaticResource CaptionTextStyle}" />
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </mvux:FeedView.ValueTemplate>
        </mvux:FeedView>
    </Grid>
</base:BaseView>
