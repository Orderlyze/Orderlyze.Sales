<base:BaseView
    x:Class="UnoApp.Presentation.Pages.Contacts.ContactsListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:UnoApp.Presentation.Common.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UnoApp.Presentation.Pages.Contacts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvux="using:Uno.Extensions.Reactive.UI"
    d:DataContext="{d:DesignInstance Type=local:ContactsListViewModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Settings Bar -->
        <Border Grid.Row="0" Style="{StaticResource SettingsBarStyle}">
            <StackPanel Orientation="Horizontal" Spacing="{StaticResource SpacingLarge}">
                <TextBlock Text="Standard Rückruf in:" VerticalAlignment="Center" Style="{StaticResource BodyTextStyle}"/>
                <NumberBox Value="{Binding DefaultCallbackDays, Mode=TwoWay}" 
                          Minimum="1" Maximum="30" SpinButtonPlacementMode="Inline"/>
                <TextBlock Text="Tagen" VerticalAlignment="Center" Style="{StaticResource BodyTextStyle}"/>
                <Button Content="Speichern" Command="{Binding SaveSettingsCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- Filter Bar -->
        <Border Grid.Row="1" Style="{StaticResource FilterBarStyle}">
            <StackPanel Orientation="Horizontal" Spacing="{StaticResource SpacingLarge}">
                <RadioButton Content="Heute anrufen" IsChecked="{Binding ShowTodayOnly, Mode=TwoWay}"/>
                <RadioButton Content="Diese Woche" IsChecked="{Binding ShowThisWeek, Mode=TwoWay}"/>
                <RadioButton Content="Alle" IsChecked="{Binding ShowAll, Mode=TwoWay}"/>
            </StackPanel>
        </Border>

        <!-- Contacts List -->
        <mvux:FeedView Grid.Row="2" Source="{Binding Contacts}">
            <mvux:FeedView.ValueTemplate>
                <DataTemplate>
                    <ScrollViewer>
                        <ItemsControl ItemsSource="{Binding}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="local:ContactViewModel">
                                    <Border Style="{StaticResource ContactCardStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Contact Info -->
                                            <StackPanel Grid.Column="0" Spacing="{StaticResource SpacingXSmall}">
                                                <StackPanel Orientation="Horizontal" Spacing="{StaticResource SpacingSmall}">
                                                    <TextBlock Text="{Binding Name.Value}" 
                                                              Style="{StaticResource BodyTextStyle}"
                                                              FontWeight="{StaticResource FontWeightBold}"/>
                                                    <Border Background="{Binding StatusColor.Value}" 
                                                            Style="{StaticResource StatusBadgeStyle}">
                                                        <TextBlock Text="{Binding StatusText.Value}" 
                                                                  Foreground="White" 
                                                                  Style="{StaticResource CaptionTextStyle}"/>
                                                    </Border>
                                                </StackPanel>
                                                
                                                <TextBlock Text="{Binding Email.Value}" Style="{StaticResource BodySmallTextStyle}"/>
                                                <TextBlock Text="{Binding Phone.Value}" Style="{StaticResource BodySmallTextStyle}"/>
                                                <TextBlock Text="{Binding Branche.Value}" Style="{StaticResource BodySmallTextStyle}"/>
                                                
                                                <StackPanel Orientation="Horizontal" Spacing="{StaticResource SpacingXSmall}" Margin="0,8,0,0">
                                                    <TextBlock Text="Nächster Anruf:" Style="{StaticResource LabelTextStyle}"/>
                                                    <TextBlock Text="{Binding NextCallDateDisplay.Value}" 
                                                              Foreground="{Binding NextCallDateColor.Value}"/>
                                                </StackPanel>
                                                
                                                <TextBlock Text="{Binding CallNotes.Value}" 
                                                          Visibility="{Binding HasNotes.Value}"
                                                          TextWrapping="Wrap"
                                                          Margin="0,4,0,0"
                                                          Style="{StaticResource BodySmallTextStyle}"/>
                                            </StackPanel>

                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Column="1" 
                                                       Orientation="Vertical" 
                                                       Spacing="{StaticResource SpacingSmall}" 
                                                       Margin="8,0,0,0">
                                                <Button Content="📞 Anrufen" 
                                                       Command="{Binding CallCommand}"
                                                       Style="{StaticResource CallButtonStyle}"/>
                                                <Button Content="📅 Verschieben" 
                                                       Command="{Binding RescheduleCommand}"
                                                       Style="{StaticResource SecondaryButtonStyle}"/>
                                                <Button Content="✓ Erreicht" 
                                                       Command="{Binding MarkReachedCommand}"
                                                       Style="{StaticResource SuccessButtonStyle}"/>
                                                <Button Content="✗ Nicht erreicht" 
                                                       Command="{Binding MarkNotReachedCommand}"
                                                       Style="{StaticResource WarningButtonStyle}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DataTemplate>
            </mvux:FeedView.ValueTemplate>
        </mvux:FeedView>
    </Grid>
</base:BaseView>