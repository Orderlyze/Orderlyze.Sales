<base:BaseView
    x:Class="UnoApp.Presentation.Pages.Contacts.ContactsListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:UnoApp.Presentation.Common.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UnoApp.Presentation.Pages.Contacts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvux="using:Uno.Extensions.Reactive.UI"
    d:DataContext="{d:DesignInstance Type=local:ContactsListViewModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Settings Bar -->
        <Border Grid.Row="0" Background="LightBlue" Padding="12">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <TextBlock Text="Standard Rückruf in:" VerticalAlignment="Center"/>
                <NumberBox Value="{Binding DefaultCallbackDays, Mode=TwoWay}" 
                          Minimum="1" Maximum="30" SpinButtonPlacementMode="Inline"/>
                <TextBlock Text="Tagen" VerticalAlignment="Center"/>
                <Button Content="Speichern" Command="{Binding SaveSettingsCommand}"/>
            </StackPanel>
        </Border>

        <!-- Filter Bar -->
        <Border Grid.Row="1" Background="WhiteSmoke" Padding="12">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <RadioButton Content="Heute anrufen" IsChecked="{Binding ShowTodayOnly, Mode=TwoWay}"/>
                <RadioButton Content="Diese Woche" IsChecked="{Binding ShowThisWeek, Mode=TwoWay}"/>
                <RadioButton Content="Alle" IsChecked="{Binding ShowAll, Mode=TwoWay}"/>
            </StackPanel>
        </Border>

        <!-- Contacts List -->
        <mvux:FeedView Grid.Row="2" Source="{Binding Contacts}">
            <mvux:FeedView.ValueTemplate>
                <DataTemplate>
                    <ScrollViewer>
                        <ItemsControl ItemsSource="{Binding}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="local:ContactViewModel">
                                    <Border Margin="8" Padding="12" 
                                            CornerRadius="8" 
                                            Background="White"
                                            BorderBrush="LightGray" 
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Contact Info -->
                                            <StackPanel Grid.Column="0" Spacing="4">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="{Binding Name}" 
                                                              FontWeight="Bold" 
                                                              FontSize="16"/>
                                                    <Border Background="{Binding StatusColor}" 
                                                            CornerRadius="4" 
                                                            Padding="8,2">
                                                        <TextBlock Text="{Binding StatusText}" 
                                                                  Foreground="White" 
                                                                  FontSize="12"/>
                                                    </Border>
                                                </StackPanel>
                                                
                                                <TextBlock Text="{Binding Email}" Foreground="Gray"/>
                                                <TextBlock Text="{Binding Phone}" Foreground="Gray"/>
                                                <TextBlock Text="{Binding Branche}" Foreground="Gray"/>
                                                
                                                <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,8,0,0">
                                                    <TextBlock Text="Nächster Anruf:" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding NextCallDateDisplay}" 
                                                              Foreground="{Binding NextCallDateColor}"/>
                                                </StackPanel>
                                                
                                                <TextBlock Text="{Binding CallNotes}" 
                                                          Visibility="{Binding HasNotes}"
                                                          TextWrapping="Wrap"
                                                          Margin="0,4,0,0"/>
                                            </StackPanel>

                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Column="1" 
                                                       Orientation="Vertical" 
                                                       Spacing="8" 
                                                       Margin="8,0,0,0">
                                                <Button Content="📞 Anrufen" 
                                                       Command="{Binding CallCommand}"
                                                       Background="Green"
                                                       Foreground="White"/>
                                                <Button Content="📅 Verschieben" 
                                                       Command="{Binding RescheduleCommand}"/>
                                                <Button Content="✓ Erreicht" 
                                                       Command="{Binding MarkReachedCommand}"
                                                       Background="LightGreen"/>
                                                <Button Content="✗ Nicht erreicht" 
                                                       Command="{Binding MarkNotReachedCommand}"
                                                       Background="LightPink"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DataTemplate>
            </mvux:FeedView.ValueTemplate>
        </mvux:FeedView>
    </Grid>
</base:BaseView>