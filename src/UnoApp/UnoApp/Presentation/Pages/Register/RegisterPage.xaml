<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="UnoApp.Presentation.Pages.Register.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:UnoApp.Presentation.Pages.Register"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      mc:Ignorable="d"
      NavigationCacheMode="Required">

    <Grid>
        <ScrollViewer>
            <StackPanel Style="{StaticResource FormStackPanelStyle}"
                        MaxWidth="{StaticResource FormMaxWidth}">
                
                <!-- Logo or App Title -->
                <TextBlock Text="Orderlyze"
                          Style="{StaticResource TitleTextStyle}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,40" />

                <TextBlock Text="Registrieren"
                          Style="{StaticResource HeadingTextStyle}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30" />

                <!-- Email Input -->
                <TextBlock Text="E-Mail"
                          Style="{StaticResource LabelTextStyle}"
                          Margin="{StaticResource LabelMargin}" />
                <TextBox x:Name="EmailTextBox"
                         Text="{Binding Email, Mode=TwoWay}"
                         PlaceholderText="ihre.email@beispiel.de"
                         Style="{StaticResource DefaultTextBoxStyle}"
                         Margin="{StaticResource ElementMargin}" />

                <!-- Password Input -->
                <TextBlock Text="Passwort"
                          Style="{StaticResource LabelTextStyle}"
                          Margin="{StaticResource LabelMargin}" />
                <PasswordBox x:Name="PasswordBox"
                             Password="{Binding Password, Mode=TwoWay}"
                             PlaceholderText="Passwort eingeben"
                             Style="{StaticResource DefaultPasswordBoxStyle}"
                             Margin="{StaticResource ElementMargin}" />

                <!-- Confirm Password Input -->
                <TextBlock Text="Passwort bestÃ¤tigen"
                          Style="{StaticResource LabelTextStyle}"
                          Margin="{StaticResource LabelMargin}" />
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Password="{Binding ConfirmPassword, Mode=TwoWay}"
                             PlaceholderText="Passwort wiederholen"
                             Style="{StaticResource DefaultPasswordBoxStyle}"
                             Margin="0,0,0,24" />

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}"
                          Style="{StaticResource ErrorTextStyle}"
                          Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}"
                          Margin="{StaticResource ElementMargin}" />

                <!-- Register Button -->
                <Button Content="Registrieren"
                        Command="{Binding RegisterCommand}"
                        IsEnabled="{Binding CanRegister}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="{StaticResource ElementMargin}" />

                <!-- Progress Ring -->
                <ProgressRing IsActive="{Binding IsLoading}"
                             Style="{StaticResource CenteredProgressRingStyle}"
                             Margin="{StaticResource ElementMargin}" />

                <!-- Login Link -->
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           Spacing="4">
                    <TextBlock Text="Bereits registriert?" Style="{StaticResource BodyTextStyle}" />
                    <HyperlinkButton Content="Zur Anmeldung"
                                   Command="{Binding NavigateToLoginCommand}"
                                   Style="{StaticResource InlineHyperlinkButtonStyle}" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>