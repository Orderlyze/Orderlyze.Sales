<Page x:Class="UnoApp.Presentation.Pages.Login.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:UnoApp.Presentation.Pages.Login"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Style="{StaticResource FormStackPanelStyle}"
                    Width="{StaticResource NarrowFormWidth}">
            
            <TextBlock Text="Login" 
                       Style="{StaticResource HeadingTextStyle}"
                       HorizontalAlignment="Center" 
                       Margin="{StaticResource SectionMargin}"/>
            
            <TextBox x:Name="EmailTextBox"
                     Text="{Binding Email, Mode=TwoWay}"
                     PlaceholderText="Email"
                     Style="{StaticResource DefaultTextBoxStyle}"/>
            
            <PasswordBox x:Name="PasswordBox"
                         Password="{Binding Password, Mode=TwoWay}"
                         PlaceholderText="Password"
                         Style="{StaticResource DefaultPasswordBoxStyle}"
                         Margin="0,5,0,20"/>
            
            <Button Content="Login"
                    Command="{Binding LoginCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="{StaticResource InputMargin}"/>
            
            <ProgressRing IsActive="{Binding IsLoading}"
                          HorizontalAlignment="Center"
                          Style="{StaticResource CenteredProgressRingStyle}"/>
            
            <TextBlock Text="{Binding ErrorMessage}"
                       Style="{StaticResource ErrorTextStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,10"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            
            <!-- Register Link -->
            <StackPanel Orientation="Horizontal"
                       HorizontalAlignment="Center"
                       Margin="20,0,0,0"
                       Spacing="4">
                <TextBlock Text="Noch kein Konto?" Style="{StaticResource BodyTextStyle}" />
                <HyperlinkButton Content="Registrieren"
                               Command="{Binding NavigateToRegisterCommand}"
                               Style="{StaticResource InlineHyperlinkButtonStyle}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>